<%= form_for [topic], html: { class: 'form-horizontal' } do |f| %>
  <% if topic.errors.any? %>
    <div class="alert alert-block">
      <h4>There are <%= pluralize(topic.errors.count, "error") %>.</h4>
      <ul>
        <% topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= control_group_tag(topic.errors[:name]) do %>
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
  <% end %>
  <%= control_group_tag(topic.errors[:description]) do %>
    <div class="control-group">
      <%= f.label :description, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, rows: 8 %>
      </div>
    </div>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <%= f.label :public, class: 'checkbox' do %>
      <%= f.check_box :public %> Public topic
    <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= image_tag(topic.image.thumb.url) if topic.image? %>
    <%= f.label :image, class: 'control-label' %>
    <div class="controls"> 
      <%= f.file_field :image %>
    </div>
  </div> 
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Save", class: 'btn' %>
    </div>
  </div>
<% end %>