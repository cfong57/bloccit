<div class="row">
  <div class="span8">
    <small>
    <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
      <%= link_to '#', class: 'pull-left' do %>
        <%= link_to ("\##{comment.id}"), [@topic, @post, comment] %>
        <%= image_tag(comment.image.thumb.url) if comment.image? %>
        <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
        <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% end %>
    </small>  
      <p><%= markdown comment.body %></p>
    </div>
    <div class="span4">
      <% if can? :edit, @comment %>
        <%= link_to "Edit comment", edit_topic_post_comment_path(@topic,@post,comment), class: 'btn btn-primary btn-mini' %>
      <% end %>
    </div>
  </div>
<% end %>