<%= link_to("Back to topic", "/topics/#{@topic.id}", class: 'btn btn-primary btn-mini') %>

<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.image.thumb.url) if @post.image? %>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small>  
    <p><%= markdown @post.body %></p>
  </div>
  <div class="span4">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
  <div class="span4">
    <% if can? :create, @comment %>
      <%= link_to "Comment", new_topic_post_comment_path(@topic,@post,@comment), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
  <div class="row span8"><h4>Many comments, now handle it</h4></div>
  <%= render partial: "comment", collection: @comments, locals: { topic: @topic, post: @post, comment: @comment } %>
  <%= will_paginate @comments %>
</div>